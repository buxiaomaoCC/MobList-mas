<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PayActivity">
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/t2"
        android:orientation="horizontal"></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/cb_pay"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                />
            <ImageView
                android:id="@+id/lv_return"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/chuzuxiangqing"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textName"
            android:layout_marginLeft="@dimen/textsize"
            android:layout_marginTop="@dimen/tv_margin"
           />
        <!--<View-->
            <!--android:id="@+id/v1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/t2"-->
            <!--android:layout_below="@id/tv_name"-->
            <!--android:layout_marginTop="@dimen/tv_margin"></View>-->
        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textsize"
            android:layout_marginTop="@dimen/tv_margin"
            android:layout_below="@id/tv_name"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textSize="@dimen/textName"
                />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_margin"
                android:textSize="@dimen/textsize"/>
        </LinearLayout>
        <!--<View-->
            <!--android:id="@+id/v2"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/t2"-->
            <!--android:layout_below="@id/ll_price"-->
            <!--android:layout_marginTop="@dimen/tv_margin"></View>-->
        <LinearLayout
            android:id="@+id/llNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textsize"
            android:layout_marginTop="@dimen/tv_margin"
            android:layout_below="@id/ll_price">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量"
                android:textSize="@dimen/textName"
                />
            <ImageView
                android:id="@+id/iv_cut"
                android:layout_width="@dimen/img_size"
                android:layout_height="@dimen/img_size"
                android:layout_marginLeft="@dimen/textsize"
                android:src="@drawable/djgm2"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textsize"
                android:textSize="@dimen/img_size"/>
            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="@dimen/img_size"
                android:layout_height="@dimen/img_size"
                android:layout_marginLeft="@dimen/textsize"
                android:src="@drawable/djgm1"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llNum"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款方式"/>
            <CheckBox
                android:id="@+id/cb_ali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:layout_marginTop="10dp"/>
            <CheckBox
                android:id="@+id/cb_wx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="微信"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/bt_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="购买"
        android:textColor="@color/white"
        android:background="@drawable/bt_login"/>
</RelativeLayout>